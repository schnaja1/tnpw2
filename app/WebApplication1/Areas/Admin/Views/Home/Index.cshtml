
@{
    ViewBag.Title = "Home";
}

<section class="offer section-wrapper">
    <div class="container">
        <h2 class="section-title">
            Vyberte si z naší nabídky
        </h2>
        <p class="section-subtitle">
            Nabízíme nejlepší evropské zájezdy.
        </p>
        <div class="row">
            <div class="col-sm-3 col-xs-6">
                <div class="offer-item">
                    <div class="icon">
                        <i class="ion-social-euro"></i>
                    </div>
                    <h3>
                        Garance nejnižší ceny
                    </h3>
                    <p>
                        Pokud najdete stejný hotel s nižší cenou napiště nám.
                    </p>
                </div>
            </div>

            <div class="col-sm-3 col-xs-6">
                <div class="offer-item">
                    <div class="icon">
                        <i class="ion-ios-home"></i>
                    </div>
                    <h3>
                        Nejlepší hotely
                    </h3>
                    <p>
                        Všechny naše hotely získávají nejlepší hodnocení.
                    </p>
                </div>
            </div>

            <div class="col-sm-3 col-xs-6">
                <div class="offer-item">
                    <div class="icon">
                        <i class="ion-android-bus"></i>
                    </div>
                    <h3>
                        Luxusní transport
                    </h3>
                    <p>
                        Nabízíme tu nejkomfortnější přepravu.
                    </p>
                </div>
            </div>

            <div class="col-sm-3 col-xs-6">
                <div class="offer-item">
                    <div class="icon">
                        <i class="ion-ios-locked"></i>
                    </div>
                    <h3>
                        Nejvyšší bezpečnost
                    </h3>
                    <p>
                        S námi se na cestách nikdy nebudu cítit ohroženi.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="visit section-wrapper">
    <div class="container">
        <h2 class="section-title">
            Nejlepší místa k návštívení
        </h2>
        <p class="section-subtitle">
            Jak můžete vidět, u nás si každý vybere.
        </p>

        <div class="owl-carousel visit-carousel">
            <div class="item">
                <img src="@Url.Content("~/Images/page/visit-1.png")" alt="visit-image" class="img-responsive visit-item">
            </div>
            <div class="item">
                <img src="@Url.Content("~/Images/page/visit-2.png")" alt="visit-image" class="img-responsive visit-item">
            </div>
            <div class="item">
                <img src="@Url.Content("~/Images/page/visit-3.png")" alt="visit-image" class="img-responsive visit-item">
            </div>
            <div class="item">
                <img src="@Url.Content("~/Images/page/visit-1.png")" alt="visit-image" class="img-responsive visit-item">
            </div>
            <div class="item">
                <img src="@Url.Content("~/Images/page/visit-2.png")" alt="visit-image" class="img-responsive visit-item">
            </div>
            <div class="item">
                <img src="@Url.Content("~/Images/page/visit-3.png")" alt="visit-image" class="img-responsive visit-item">
            </div>
        </div>
    </div>
</section> 