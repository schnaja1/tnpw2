@model DataAccess.Model.Uzivatel
@{
    ViewBag.Title = "Edit";
}

<a href="@Url.Action("Index","Profil")">Rezervace</a>


@Html.ValidationSummary()

@using (Html.BeginForm("Update", "Profil", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.prava.Id)
    @Html.HiddenFor(x => x.prava.nazev)


    <div class="form-group">
        <label class="col-sm-2 control-label" for="jmeno">Jméno</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.jmeno, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.jmeno)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Příjmení</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.prijmeni, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.prijmeni)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Login</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.login, new { @class = "form-control email" })
            @Html.ValidationMessageFor(x => x.login)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Heslo</label>
        <div class="col-sm-10">
            @Html.PasswordFor(x => x.heslo, new { @class = "form-control password" })
            @Html.ValidationMessageFor(x => x.heslo)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Město</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.adresa.mesto, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.adresa.mesto)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Ulice</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.adresa.ulice, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.adresa.ulice)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Cp</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.adresa.cp, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.adresa.cp)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Psc</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.adresa.psc.psc, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.adresa.psc.psc)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Telefonní číslo</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.telefon, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.telefon)
        </div>
    </div>

    <div class="form-group">
        <label>Přeji si dostávat novinky.</label>
        <div class="form-group">
            @Html.CheckBoxFor(x => x.novinky, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.novinky)
        </div>

    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Upravit</button>
        </div>
    </div>

}


